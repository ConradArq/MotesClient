<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
    
    <TextView android:id="@+id/show_motes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:textColor="#7b7a7e"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:text="@string/title_show_motes"
        tools:context=".ShowInfo" />

    <TextView android:id="@+id/show_motes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:lineSpacingExtra="3dp"
        tools:context=".ShowInfo" />

    <ImageButton
	    android:id="@+id/back_button"
	    style="@style/Custom.ImageButton"
	    android:contentDescription="@string/connect_picture"
	    android:layout_width="115dp"
	    android:layout_height="80dp"
	    android:paddingRight="10dp"
	    android:paddingTop="30dp"
	    android:layout_gravity="right"
	    android:scaleType="fitXY"
	    android:background="@null"
	    android:src="@drawable/atras"/> 
    
</LinearLayout>
